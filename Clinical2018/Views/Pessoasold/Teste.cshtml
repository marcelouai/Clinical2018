                </div>
                <div class="form-group">
                    <label asp-for="Tel_Cel_Mess" class="control-label"></label>
                    <select asp-for="Tel_Cel_Mess" asp-items="Html.GetEnumSelectList<TipoAppMensagem>()" class="form-control"></select>
