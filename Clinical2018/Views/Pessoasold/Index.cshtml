@model IEnumerable<Clinical2018.Models.Pessoa>

@{
    ViewData["Title"] = "Listagem de Pessoas";
}


<h2>Listagem de Pessoas</h2>

<p>
    <a asp-action="Create">Nova Pessoa</a>
</p>
<table class="table table-striped table-condensed table-responsive text-nowrap datatable-default">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel_Cel)
            </th>
            <th>
                Localidade
            </th>
            <th>Teste</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel_Cel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidade)/@Html.DisplayFor(modelItem => item.UF_SGL)
                    @*@Html.DisplayFor(modelItem => item.Logradouro_Tpo) @Html.DisplayFor(modelItem => item.Logradouro),
                    @Html.DisplayFor(modelItem => item.Numero) @Html.DisplayFor(modelItem => item.Complemento)
                    <br />
                    @Html.DisplayFor(modelItem => item.Bairro) -
                    @Html.DisplayFor(modelItem => item.Localidade)/@Html.DisplayFor(modelItem => item.UF_SGL)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel_Cel)
                    @if ((item.Tel_Cel != null) && (item.Tel_Cel.Length > 5))
                    {
                        @if (item.Tel_Cel_Mess.ToString() == "WhatsApp")
                        {<i class="fa fa-whatsapp"> </i>}
                        @if (item.Tel_Cel_Mess.ToString() == "Telegram")
                        {<i class="fa fa-telegram"></i>}
                        @if(item.Tel_Cel_Mess.ToString() == "Skype")
                        {<i class="fa fa-skype"></i>}
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PessoaID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PessoaID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PessoaID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


